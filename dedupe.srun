#!/bin/bash

#SBATCH --account=bgmp
#SBATCH --partition=bgmp
#SBATCH --time=10:00:00

# activate conda env
conda activate deduper

# define files
input_file="C1_SE_uniqAlign.sam"
umi_file="STL96.txt"
